@model AuthorVM

@{
    ViewBag.Title = "Edit book";
}

@*<script src="~/js/view-model/book-vm.js"></script>*@

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-md-5">
            <div class="card card-user">
                <div class="image">
                    <img src="~/images/author-bg.jpg" alt="...">
                </div>
                <div class="content">
                    <div class="author">
                        <img class="avatar border-white" src="~/images/book-default.png" alt="...">
                        <h4 class="title">
                            <span data-bind="text:VM.FullName">Unknown book name</span><i class="fa fa-star" style="color:red"></i><br>
                        </h4>

                    </div>
                </div>
                <hr>
                <div class="text-center">
                    <div class="row">
                        <div class="col-md-3 col-md-offset-1">
                            <h5><span data-bind="text:VM.BooksCount">1999</span><br><small>Published</small></h5>
                        </div>
                        <div class="col-md-4">
                            <h5><span data-bind="text:VM.Born">999</span><br><small>Pages</small></h5>
                        </div>
                        <div class="col-md-3">
                            <h5><span data-bind="text:VM.Died">9</span><br><small>Authors</small></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-7">
            <div class="card">
                <div class="header">
                    <h4 class="title">Edit Info</h4>
                </div>
                <div class="content">
                    <form>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control border-input" placeholder="Full book name" data-bind="value:VM.FirstName">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Date published</label>
                                    <input class="form-control border-input" placeholder="Date published" data-bind="value:VM.Country">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Pages count</label>
                                    <input class="form-control border-input" placeholder="Pages count" data-bind="value:VM.Born">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Rating</label>
                                    <input class="form-control border-input" placeholder="Rating" data-bind="value:VM.Died">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Authors</label>
                                    <input class="form-control border-input" placeholder="Authors" data-bind="value:VM.Wiki">
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

@model IEnumerable<AuthorVM>

@{
    ViewBag.Title = "Authors list";
}


<ul>
    @foreach (var item in Model)
    {
    <li><a asp-area="" asp-controller="Author" asp-action="Details">@item.FullName</a></li>
    }
</ul>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h4 class="title">Books</h4>
                    <p class="category">Available authors</p>
                </div>
                <div class="content table-responsive table-full-width">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Born</th>
                                <th>Authors</th>
                                <th>Rating</th>
                                <th>Pages</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Book name 1</td>
                                <td>1885</td>
                                <td>Author 1, Author 2 ...</td>
                                <td>
                                    <i class="fa fa-star" style="color:gray"></i>
                                    <i class="fa fa-star" style="color:gray"></i>
                                    <i class="fa fa-star" style="color:gray"></i>
                                    <i class="fa fa-star-o" style="color:gray"></i>
                                    <i class="fa fa-star-o" style="color:gray"></i>
                                </td>
                                <td>
                                    247
                                </td>
                                <td>
                                    <a href="#"><i class="fa fa-edit" style="color:gray"></i></a>
                                    <a href="#"><i class="fa fa-remove" style="color:gray"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>